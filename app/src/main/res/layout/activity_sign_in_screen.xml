<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInScreen"
    android:background="@drawable/img_29"
    tools:layout_editor_absoluteX="-13dp"
    tools:layout_editor_absoluteY="135dp">


    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/agbalumo"
        android:paddingStart="25dp"
        android:text="Welcome Back \nHackMate !!"

        android:textColor="@color/impcolor"
        android:textSize="35dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView19"
        app:layout_constraintVertical_bias="0.363" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView9"
        android:layout_width="match_parent"
        android:layout_height="400dp"

        android:layout_marginHorizontal="12dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.64"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.616">

        <LinearLayout
            android:background="@drawable/img_30"
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="10dp"
            android:paddingTop="20dp"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:boxStrokeColor="@color/purple">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailIdEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/baseline_email_24"
                    android:drawablePadding="5dp"
                    android:fontFamily="serif-monospace"
                    android:hint="Email Id"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/impcolor"
                    android:textColorHint="@color/impcolor"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:boxStrokeColor="@color/purple"
                app:endIconMode="password_toggle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/userPassEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/baseline_lock_outline_24"
                    android:drawablePadding="5dp"
                    android:fontFamily="serif-monospace"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColor="@color/impcolor"
                    android:textColorHint="@color/impcolor"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/forgotPasswordText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:fontFamily="serif-monospace"
                android:gravity="right"
                android:paddingEnd="10dp"
                android:text="Forgot Password"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:backgroundTint="#510D81"
                android:fontFamily="serif-monospace"
                android:text="Sign In"
                android:textColor="@color/white"
                android:textColorHint="@color/impcolor"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tosignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:fontFamily="serif-monospace"
                android:gravity="center"
                android:paddingStart="20dp"
                android:text="Don't have Account ? \nSign Up"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.074"
        app:srcCompat="@drawable/logohackverse" />

    <Button
        android:id="@+id/googlebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="22dp"
        android:backgroundTint="#510D81"
        android:backgroundTintMode="add"
        android:fontFamily="serif-monospace"
        android:paddingStart="85dp"
        android:text="SignIn with google"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.935">


    </Button>

    <ImageView

        android:layout_width="37dp"
        android:layout_height="29dp"
        android:layout_marginLeft="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/googlebtn"
        app:layout_constraintEnd_toEndOf="@+id/googlebtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/googlebtn"
        app:layout_constraintTop_toTopOf="@+id/googlebtn"
        app:layout_constraintVertical_bias="0.368"
        app:srcCompat="@drawable/googleg_standard_color_18" />


</androidx.constraintlayout.widget.ConstraintLayout>