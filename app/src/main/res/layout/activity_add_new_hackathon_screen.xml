<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
android:background="@drawable/img_29"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewHackathonScreen">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/logohackverse" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:fontFamily="serif-monospace"
        android:gravity="center"
        android:text="Add New Hackathon"
        android:textColor="@color/bcColor"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:fontFamily="serif-monospace"
        android:text="Enter Details"
        android:textSize="20dp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:elevation="20dp"
        app:cardCornerRadius="10dp"
     >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" HackathonTitle"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="15dp"
                android:textSize="15dp"
                 />

            <EditText
                android:id="@+id/HackathonTitle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="7dp"
                android:hint="Hack Master"
                android:inputType="text"
                android:padding="5dp"
                android:textColorHint="@color/light_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Organiser"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="15dp"
                android:textSize="15dp"
                />


            <EditText
                android:id="@+id/Organisation"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Indian Institute of Technology Dhanbad"
                android:inputType="text"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="7dp"
                android:textColorHint="@color/light_gray" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Timeline"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="15dp"
                android:textSize="15dp"
                />


            <EditText
                android:id="@+id/editTextStartDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="200dp"
                android:clickable="true"
                android:focusable="false"
                android:gravity="left"
                android:hint="Start Date"
                android:textSize="16sp" />

                <EditText
                    android:id="@+id/editTextEndDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="200dp"
                    android:clickable="true"
                    android:focusable="false"
                    android:gravity="left"
                    android:hint="End Date"
                    android:textSize="16sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Mode"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:textSize="15dp"
                />


            <Spinner
                android:id="@+id/spinnerMode"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/border"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Team Size"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:textSize="15dp"
                />

            <Spinner
                android:id="@+id/spinnerteamsize"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/Organisation"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/border"

                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Reward"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:textSize="15dp"
                />

            <Spinner
                android:id="@+id/spinnerReward"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/border"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Type"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:textSize="15dp"
                />

            <Spinner
                android:id="@+id/spinnertype"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="7dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/border" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" About Hackathon"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:textSize="15dp"
                />

            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/border"
                android:hint="Description"
                android:inputType="text"
                android:padding="5dp"
                android:textColorHint="@color/light_gray" />

            <Button
                android:id="@+id/addhakathondata"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/impcolor"
                android:text="Add " />


        </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</LinearLayout>